{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "bin-debug",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "allowJs": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*"
    ]
}